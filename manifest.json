  {
    "name": "Browser Stats",
    "version": "1.0",
    "description": "Stats on your current browsing session",
    "permissions": ["activeTab", "storage", "tabs"],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "html/popup.html"
      },
      "options_ui": {
        "page": "html/options.html",
        "open_in_tab": false
      },
    "manifest_version": 2
  }